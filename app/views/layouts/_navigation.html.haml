= link_to image_tag("logo.jpg", :class => 'brand'), root_path
%ul.nav
  - if user_signed_in?
    %li
      = link_to 'Logout', destroy_user_session_path, :method=>'delete', :class=>'light'
  - else
    %li
      = link_to 'Login', new_user_session_path, :class=>'light'
  - if user_signed_in?
    %li
      = link_to 'Edit account', edit_user_registration_path, :class=>'light'
    - if current_user.has_role? :admin
      %li
        = link_to 'Admin', rails_admin_path, :class=>'light'
  - else
    %li
      = link_to 'Sign up', new_user_registration_path, :class=>'light'
